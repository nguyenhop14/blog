<% provide :title, @entry.user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @entry.user %>
        <%= @entry.user.name %>
      </h1>
    </section>
    <section class="stats">

    </section>
  </aside>
  <div class="col-md-8">

      <ol class="microposts">
        <%= render @entry %>
        <h3><%= t "entries.show.comment" %></h3>
          <div id="div-create" >
          <% if @entry.comments.any? %>
            <ol class="microposts">
                <%= render @comments %>
            </ol>
          <% end %>
          </div>
          <div id="paginate">
            <% if @entry.comments.any? %>
              <%= will_paginate @comments, remote: true %>
            <% end %>
          </div>



        <% if logged_in? %>
          <div id="ajax-form-create">
            <section class="micropost_form">
              <%= render "comments/comment_form" %>
            </section>
          </div>
        <% end %>
      </ol>
  </div>
</div>
